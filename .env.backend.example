# Backend Environment Variables
NODE_ENV=production
PORT=3001

# Infisical Configuration (for secrets management)
# These will be provided by GitHub Secrets during deployment
INFISICAL_CLIENT_ID=
INFISICAL_CLIENT_SECRET=
INFISICAL_PROJECT_ID=
INFISICAL_ENVIRONMENT=prod
INFISICAL_SECRET_PATH=/

# MongoDB Configuration (fallback if Infisical not available)
MONGODB_URI=mongodb://admin:password@mongodb:27017/travion?authSource=admin
MONGODB_USER=
MONGODB_PASSWORD=

# JWT Configuration (fallback if Infisical not available)
JWT_SECRET=change-this-to-secure-secret-min-32-chars
JWT_EXPIRES_IN=7d

# API Configuration
API_PREFIX=/api/v1
CORS_ORIGIN=*

# Logging
LOG_LEVEL=info
